<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.scorekeeper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/maxresdefault"
            android:background="#000000"
            android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/marchmadness2018logo"
                android:adjustViewBounds="true"
                android:layout_marginRight="210dp"/>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kansas_jayhawks_logo"
                android:adjustViewBounds="true"
                android:maxHeight="64dp"
                android:layout_margin="8dp"
                android:scaleType="centerInside" />


            <ImageView
                android:id="@+id/team1Logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="32sp"
                android:textStyle="italic"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:text="Kansas" />

            <RelativeLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                >

                <TextView
                    android:id="@+id/team1ScoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Score"
                    android:textAllCaps="true"/>

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team1ScoreLabel"
                    android:layout_centerHorizontal="true"
                    android:textSize="42sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#e35f15"
                    android:text="0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/team1FoulsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="18dp"
                    android:layout_centerHorizontal="true"
                    android:text="Fouls"
                    android:textAllCaps="true"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/team_a_foul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team1FoulsLabel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="8dp"
                    android:gravity="bottom"
                    android:text="0"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="24sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1f91a1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/villanova_wildcats_logo"
                android:adjustViewBounds="true"
                android:maxHeight="64dp"
                android:layout_margin="8dp"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="32sp"
                android:textStyle="italic"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:text="Villanova" />

            <RelativeLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/team2ScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Score"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="42dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#e35f15"
                android:layout_below="@id/team2ScoreLabel"
                android:layout_centerHorizontal="true" />
            </RelativeLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/team2FoulsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true"
                android:text="Fouls"
                android:textAllCaps="true"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/team_b_foul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:text="0"
                android:textSize="24sp"
                android:gravity="bottom"
                android:layout_below="@id/team2FoulsLabel"
                android:layout_centerHorizontal="true"

                android:layout_marginLeft="8dp"/>
</RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1f91a1"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1f91a1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/team1ButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/team1TwoPoints"
                    android:layout_width="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="wrap_content"
                    android:background="#1f91a1"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:text="Two Points"
                    android:onClick="twoPointTeamA"/>

                <Button
                    android:id="@+id/team1ThreePoints"
                    android:layout_width="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="wrap_content"
                    android:background="#1f91a1"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:text="Three Points"
                    android:onClick="threePointTeamA"/>

                <Button
                    android:id="@+id/team1FreeThrow"
                    android:layout_width="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="wrap_content"
                    android:background="#1f91a1"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:text="Free Throw"
                    android:onClick="freeThrowTeamA"/>

                <Button
                    android:id="@+id/team1Fouls"
                    android:layout_width="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="24dp"
                    android:layout_height="wrap_content"
                    android:background="#1f91a1"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:text="Team Foul"
                    android:onClick="foulTeamA"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/team2ButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/team1ButtonLayout"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/team2TwoPoints"
                    android:layout_width="match_parent"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="wrap_content"
                    android:background="#1f91a1"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:text="Two Points"
                    android:onClick="twoPointTeamB"/>

                <Button
                    android:id="@+id/team2ThreePoints"
                    android:layout_width="match_parent"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="wrap_content"
                    android:background="#1f91a1"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:text="Three Points"
                    android:onClick="threePointTeamB"/>

                <Button
                    android:id="@+id/team2FreeThrow"
                    android:layout_width="match_parent"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="wrap_content"
                    android:background="#1f91a1"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:text="Free Throw"
                    android:onClick="freeThrowTeamB"/>

                <Button
                    android:id="@+id/team2Fouls"
                    android:layout_width="match_parent"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="12dp"
                    android:layout_height="wrap_content"
                    android:background="#1f91a1"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:text="Team Foul"
                    android:onClick="foulTeamB"/>

            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/resetGame"
                android:layout_width="match_parent"
                android:layout_marginRight="72dp"
                android:layout_marginLeft="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif-light"
                android:background="#e35f15"
                android:textColor="#FFFFFF"
                android:text="Reset Game"
                android:onClick="resetTeamAll"/>
        </LinearLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>
